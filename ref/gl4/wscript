def options(opt):
	pass

def configure(conf):
	pass

def build(bld):
	bld.shlib(
		source   = 'gl4_context.c',
		target   = 'ref_gl4',
		defines  = 'REF_DLL',
		use      = 'engine_includes sdk_includes werror',
		install_path = bld.env.LIBDIR
	)
